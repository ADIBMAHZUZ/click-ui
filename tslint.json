{
  "extends": ["tslint-consistent-codestyle"],
  "rulesDirectory": ["codelyzer"],
  "rules": {
    "no-unnecessary-else": true,
    "no-unused": true,
    "prefer-while": true,
    "prefer-const-enum": true,
    "array-type": false,
    "no-var-before-return": true,
    "no-static-this": true,
    "no-collapsible-if": true,
    "naming-convention": true,
    "early-exit": false,
    "deprecation": {
      "severity": "warning"
    },
    "const-parameters": true,
    "no-else-after-return": true,
    "arrow-parens": false,
    "import-blacklist": [true, "rxjs/Rx"],
    "interface-name": false,
    "max-classes-per-file": false,
    "max-line-length": [true, 200],
    "member-access": false,
    "member-ordering": [
      true,
      {
        "order": ["static-field", "instance-field", "static-method", "instance-method"]
      }
    ],
    "no-consecutive-blank-lines": false,
    "no-console": [true, "debug", "info", "time", "timeEnd", "trace"],
    "no-empty": false,
    "no-inferrable-types": [true, "ignore-params"],
    "no-non-null-assertion": true,
    "no-redundant-jsdoc": true,
    "no-switch-case-fall-through": true,
    "no-var-requires": true,
    "object-literal-key-quotes": [true, "as-needed"],
    "object-literal-sort-keys": false,
    "ordered-imports": false,
    "quotemark": [true, "single"],
    "trailing-comma": false,
    "no-output-on-prefix": true,
    "no-inputs-metadata-property": true,
    "no-host-metadata-property": true,
    "no-input-rename": true,
    "no-output-rename": true,
    "use-lifecycle-interface": true,
    "use-pipe-transform-interface": true,
    "one-variable-per-declaration": true,
    "component-class-suffix": [true, "Page", "Component"],
    "directive-class-suffix": true,
    "directive-selector": [true, "attribute", "app", "camelCase"],
    "component-selector": [true, "element", "app", "page", "kebab-case"],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "arrow-return-shorthand": true,
    "binary-expression-operand-order": true,
    "file-name-casing": [true, "kebab-case"],
    "interface-over-type-literal": true,
    "forin": true,
    "no-bitwise": true,
    "no-construct": true,
    "no-default-export": true,
    "new-parens": true,
    "no-duplicate-imports": true,
    "no-duplicate-variable": true,
    "no-empty-interface": true,
    "no-floating-promises": false,
    "cyclomatic-complexity": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-parameter-reassignment": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-unsafe-any": false,
    "curly": true,
    "class-name": true,
    "no-var-keyword": true,
    "no-unused-expression": true
  },
  "linterOptions": {
    "exclude": ["bin", "lib/*generated.js", "node_modules/**", "**/*.spec.ts"]
  },
  "compilerOptions": {
    "plugins": [
      {
        "name": "typescript-tslint-plugin",
        "alwaysShowRuleFailuresAsWarnings": false,
        "ignoreDefinitionFiles": true,
        "configFile": "./tslint.json",
        "suppressWhileTypeErrorsPresent": false
      }
    ]
  }
}
